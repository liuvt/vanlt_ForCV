@inherits LayoutComponentBase

<!--Header-->
<VOverlaySidebar @rendermode="InteractiveServer" />

<div class="h-screen">
	<!--Siderbar-->
	<div class="sidebar w-0 xl:w-64 xl:block transition-all overflow-hidden">
		<!-- Sidebar Transition -->
		<div class="fixed top-0 left-0 z-40 w-64 h-screen transition-transform -translate-x-full xl:translate-x-0">
			<nav class="text-center text-bg-dark h-full overflow-y-auto pt-3">
				<img class="w-32 rounded-full border-2 border-white mx-auto" src="./imgs/about.jpg" />
				<div class="p-6 text-2xl font-bold">LƯU THIỆN VĂN</div>
				<ul class="space-y-2 font-medium mr-9">
					@foreach (var item in MenuItems)
					{
						<li>
							<a href="@item.Link" data-nav-section="@item.Link.Replace("#","")" class="block !no-underline hover:text-blue-400 hover:translate-x-1 transition-all duration-200">
								@item.Label
							</a>
						</li>
					}
				</ul>
			</nav>
		</div>
	</div>

	<!-- Main content -->
	<div class="flex-1 flex flex-col">
		<article class="overflow-auto">
			@Body
		</article>
	</div>
</div>

@code {

	private List<(string Label, string Link)> MenuItems = new()
	{
		("Giới thiệu", "#home"),
		("Thông tin", "#about"),
		("Kỹ năng", "#skills"),
		("Trình độ học vấn", "#education"),
		("Kinh nghiệm", "#experience"),
		("Liên hệ", "#contact"),
	};
}