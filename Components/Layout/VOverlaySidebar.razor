@inject MenuService menuService
<div class="relative">
	<!-- Khi ở trạng thái mobile Hiển thị button ToggleSideBar -->
	@if (!isSidebarVisible)
	{
		<div class="flex items-center justify-between space-x-4">
			<button @onclick="ToggleSidebar"
					class="inline-flex items-center p-2 mt-2 ms-3 text-sm text-gray-500 rounded-lg xl:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600">
				<span class="sr-only">Open sidebar</span>
				<svg class="w-6 h-6" aria-hidden="true" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
					<path clip-rule="evenodd" fill-rule="evenodd" d="M2 4.75A.75.75 0 012.75 4h14.5a.75.75 0 010 1.5H2.75A.75.75 0 012 4.75zm0 10.5a.75.75 0 01.75-.75h7.5a.75.75 0 010 1.5h-7.5a.75.75 0 01-.75-.75zM2 10a.75.75 0 01.75-.75h14.5a.75.75 0 010 1.5H2.75A.75.75 0 012 10z"></path>
				</svg>
			</button>
			<div class="xl:hidden flex mt-2 mr-2 items-center">
				<div class="text-sm font-bold mr-2">LƯU THIỆN VĂN</div>
				<img class="w-[2.2rem] rounded-full border-2 border-white mx-auto object-over" src="./imgs/about.jpg" />
			</div>
		</div>
	}
	<!-- Overlay toàn màn hình, click vào sẽ đóng sidebar -->
	@if (isSidebarVisible)
	{
		<!-- Overlay: chỉ để click ra ngoài -->
		<div @onclick="ToggleSidebar"
			 class="fixed inset-0 z-30 bg-black bg-opacity-50 xl:hidden"></div>

		<!-- Sidebar: nằm phía trên overlay, không bị ảnh hưởng khi click vào -->
		<div class="sidebar @SidebarCssClassHide">
			<!--@onclick:stopPropagation trong Blazor là cú pháp mở rộng cho sự kiện @onclick, 
				giúp bạn ngăn chặn sự kiện click lan ra các phần tử cha (tương tự như event.stopPropagation() trong JavaScript).-->
			<div @onclick:stopPropagation
				 class="@SidebarTransitionClass fixed top-0 left-0 z-40 w-64 h-screen transition-transform">
				<nav class="text-center text-bg-dark h-full overflow-y-auto pt-3">
					<img class="w-32 rounded-full border-2 border-white mx-auto" src="./imgs/about.jpg" />
					<div class="p-6 text-2xl font-bold">LƯU THIỆN VĂN</div>
					<ul class="space-y-2 font-medium mr-9">
						@foreach (var item in menuService.Menus)
						{
							<li>
								<a href="@item.OtherUrl" @onclick="ToggleSidebar" data-nav-section="@item.Url" class="block !no-underline hover:text-blue-400 hover:translate-x-1 transition-all duration-200">
									@item.OtherName
								</a>
							</li>
						}
					</ul>
				</nav>
			</div>
		</div>
	}
</div>

@code {
	public bool isSidebarVisible = false;
	private void ToggleSidebar()
	{
		isSidebarVisible = !isSidebarVisible;
	}

	private string SidebarCssClassHide =>
	isSidebarVisible
		? "w-64 transition-all xl:block"
		: "w-0 xl:w-64 xl:block transition-all overflow-hidden";

	private string SidebarTransitionClass =>
		isSidebarVisible
			? "translate-x-0"
			: "-translate-x-full xl:translate-x-0";
}
 